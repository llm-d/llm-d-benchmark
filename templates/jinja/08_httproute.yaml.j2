apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: {{ model.shortName }}
  namespace: {{ gateway.namespace }}
spec:
  parentRefs:
    - group: gateway.networking.k8s.io
      kind: Gateway
      name: {{ gateway.name }}
  rules:
    - backendRefs:
      - group: inference.networking.k8s.io
        kind: InferencePool
        name: {{ model.shortName }}-gaie
        port: {{ decode.vllm.servicePort }}
        weight: 1
      timeouts:
        backendRequest: 0s
        request: 0s
      matches:
        - path:
            type: PathPrefix
            value: /{{ model.shortName }}/
      filters:
        - type: URLRewrite
          urlRewrite:
            path:
              type: ReplacePrefixMatch
              replacePrefixMatch: /

    - backendRefs:
      - group: inference.networking.k8s.io
        kind: InferencePool
        name: {{ model.shortName }}-gaie
        port: {{ decode.vllm.servicePort }}
        weight: 1
      timeouts:
        backendRequest: 0s
        request: 0s
